{% extends 'base.html.twig' %}

{% block title %}Edit Movie{% endblock %}

{% block body %}
<div class="container">
        <h2 class="text-center mt-5 mb-3">Edit Movie of a Library</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_library_index') }}"> 
                    View All Libraries
                </a>
            </div>
            <div class="card-body">
            <b>{{ title }}</b>

                {% include 'library/_form.html.twig' with {'button_label': 'Update Library', 'button_color': 'btn-outline-success'}  %}
            </div>
        </div>
    </div>
{% endblock %}
