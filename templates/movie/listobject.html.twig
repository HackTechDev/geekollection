{% extends 'base.html.twig' %}
  
{% block title %}All API results{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">All API results for {{ movieId }}</h2>
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for data in listData %}
                        <li class="list-group-movie">
                            <form method="post" action="{{ path('edit_objectlink', {'id': movieId}) }}">
                                <input type="text" name="movieId" id="movieId_{{ movieId }}" value={{ movieId }}>
                                <input type="radio" name="selectedData" id="data_{{ data.id }}" value={{ data.id }}>
                                <label for="data_{{ data.id }}">
                                    ID: {{ data.id }} | Title: {{ data.title }} | Gencode: {{ data.gencode }}<br>
                                    <img src="{{ data.cover }}" alt="Object Cover" width="200px"><br>
                                </label>
                                <button type="submit" class="btn btn-primary">Select this Object</button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
           </div>
        </div>
    </div>
{% endblock %}
