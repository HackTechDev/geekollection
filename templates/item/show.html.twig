{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Movie of a Item</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_item_index') }}"> 
                    View All Items
                </a>
            </div>
            <div class="card-body">

                <table class="table">
                    <tbody>
                        <tr>
                            <td>
                                {% for movie in item.movie %}
                                    {{ movie.title }} | {{movie.media.label}} | {{movie.support.label}} / {{item.information}} / {{item.description}}
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a
                    class="btn btn-outline-success"
                    href="{{ path('app_item_edit', {'id': item.id}) }}">
                    Edit
                </a>
            </div>
        </div>
    </div>



{% endblock %}
