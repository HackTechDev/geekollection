{% extends 'base.html.twig' %}
  
{% block title %}Edit Item{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Edit Item</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_item_index') }}"> 
                    View All Items
                </a>
            </div>
            <div class="card-body">
                {% include 'item/_form.html.twig' with {'button_label': 'Update Item', 'button_color': 'btn-outline-success'}  %}

                <form method="POST" action="{{ path('call_api_oeuvre', {'id': item.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('call_api_oeuvre' ~ item.id) }}">
                    <button class="btn btn-outline-success mt-3">Call API Oeuvre</button>
                </form>

                <form method="POST" action="{{ path('call_api_object', {'id': item.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('call_api_object' ~ item.id) }}">
                    <button class="btn btn-outline-success mt-3">Call API Object</button>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
