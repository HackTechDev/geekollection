{% extends 'base.html.twig' %}
  
{% block title %}Movie list{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Search Movie</h2>
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-body">
                <h1>Search Results</h1>
                <ul class="list-group">
                    {% for movie in results %}
                        <li class="list-group-movie">>
                            <form method="post" action="{{ path('add_movie_item', {'id': movie.id}) }}">
                                <input type="text" name="movieid" id="movieid_{{ movie.id }}" value={{ movie.id }}>
                                <input type="radio" name="selectedData" id="data_{{ movie.id }}" value={{ movie.id }}>
                                <label for="data_{{ movie.id }}">
                                    {{ movie.id }} : {{ movie.title }} | {{movie.media.label}} | {{movie.support.label}}
                                 </label>
                                <button type="submit" class="btn btn-primary">Select this film</button>
                            </form>

                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
  
{% endblock %}